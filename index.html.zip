<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <title>Calculator.io</title>
  <style>
    body {
      font-family: 'Segoe UI', sans-serif;
      background: linear-gradient(to right, #232526, #414345);
      display: flex;
      flex-direction: column;
      align-items: center;
      justify-content: center;
      height: 100vh;
      margin: 0;
    }

    h1 {
      color: #fff;
      margin-bottom: 20px;
      text-shadow: 1px 1px 2px #000;
    }

    .calculator {
      background: #2b2b2b;
      padding: 25px;
      border-radius: 20px;
      box-shadow: 0 0 25px rgba(0, 0, 0, 0.7);
    }

    .display {
      width: 100%;
      height: 60px;
      font-size: 28px;
      text-align: right;
      padding: 10px;
      margin-bottom: 20px;
      border-radius: 12px;
      background: #000;
      color: #0f0;
      font-family: 'Courier New', Courier, monospace;
      border: 2px inset #444;
    }

    .buttons {
      display: grid;
      grid-template-columns: repeat(4, 70px);
      gap: 15px;
    }

    .btn {
      background: linear-gradient(to bottom, #666, #333);
      color: #fff;
      font-size: 22px;
      padding: 20px;
      border: none;
      border-radius: 12px;
      box-shadow: 0 4px #111;
      cursor: pointer;
      transition: 0.2s;
    }

    .btn:hover {
      background: #555;
    }

    .btn:active {
      transform: translateY(2px);
      box-shadow: 0 2px #000;
    }

    .clear {
      grid-column: span 4;
      background: #c0392b;
    }

    .mode-toggle {
      margin-top: 15px;
      padding: 8px 20px;
      border-radius: 8px;
      border: none;
      background: #3498db;
      color: white;
      cursor: pointer;
    }

    body.light-mode {
      background: linear-gradient(to right, #ffffff, #dddddd);
    }

    body.light-mode h1 {
      color: #000;
    }

    body.light-mode .calculator {
      background: #eaeaea;
      box-shadow: 0 0 15px #999;
    }

    body.light-mode .display {
      background: #fff;
      color: #000;
      border: 2px solid #ccc;
    }

    body.light-mode .btn {
      background: linear-gradient(to bottom, #ddd, #aaa);
      color: #000;
      box-shadow: 0 4px #888;
    }

    body.light-mode .btn:hover {
      background: #bbb;
    }

    body.light-mode .clear {
      background: #e74c3c;
    }

    body.light-mode .mode-toggle {
      background: #2c3e50;
    }
  </style>
</head>
<body>
  <h1>Calculator.io</h1>

  <div class="calculator">
    <input type="text" id="display" class="display" disabled>
    <div class="buttons">
      <button class="btn" onclick="press('7')">7</button>
      <button class="btn" onclick="press('8')">8</button>
      <button class="btn" onclick="press('9')">9</button>
      <button class="btn" onclick="press('/')">÷</button>

      <button class="btn" onclick="press('4')">4</button>
      <button class="btn" onclick="press('5')">5</button>
      <button class="btn" onclick="press('6')">6</button>
      <button class="btn" onclick="press('*')">×</button>

      <button class="btn" onclick="press('1')">1</button>
      <button class="btn" onclick="press('2')">2</button>
      <button class="btn" onclick="press('3')">3</button>
      <button class="btn" onclick="press('-')">−</button>

      <button class="btn" onclick="press('0')">0</button>
      <button class="btn" onclick="press('.')">.</button>
      <button class="btn" onclick="calculate()">=</button>
      <button class="btn" onclick="press('+')">+</button>

      <button class="btn clear" onclick="clearDisplay()">Clear</button>
    </div>
  </div>

  <button class="mode-toggle" onclick="toggleTheme()">Light / Dark Mode</button>

  <audio id="clickSound" src="https://www.soundjay.com/buttons/sounds/button-16.mp3"></audio>

  <script>
    let display = document.getElementById("display");
    let clickSound = document.getElementById("clickSound");

    function press(val) {
      playSound();
      vibrate();
      display.value += val;
    }

    function clearDisplay() {
      playSound();
      vibrate();
      display.value = "";
    }

    function calculate() {
      playSound();
      vibrate();
      try {
        display.value = eval(display.value);
      } catch {
        display.value = "Error";
      }
    }

    function playSound() {
      clickSound.currentTime = 0;
      clickSound.play();
    }

    function vibrate() {
      if (navigator.vibrate) {
        navigator.vibrate(50);
      }
    }

    function toggleTheme() {
      document.body.classList.toggle("light-mode");
    }
  </script>
</body>
</html>